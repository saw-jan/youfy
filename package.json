{
    "name": "youfy",
    "version": "1.0.3",
    "description": "Minimal youtube audio player",
    "main": "App.js",
    "author": "Sawjan G. <saw.jan.grg3e@gmail.com> (https://sajang.com.np)",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/saw-jan/youfy.git"
    },
    "bugs": {
        "url": "https://github.com/saw-jan/youfy/issues"
    },
    "scripts": {
        "build": "webpack -c webpack.config.js",
        "build:w": "webpack -c webpack.config.js --watch",
        "start": "npm run build && electron .",
        "start:dev": "concurrently \"npm:build:w\" \"MODE=dev electron .\"",
        "package": "electron-builder build -p never",
        "postinstall": "electron-builder install-app-deps"
    },
    "devDependencies": {
        "@babel/core": "^7.16.0",
        "@babel/preset-env": "^7.16.4",
        "babel-loader": "^8.2.3",
        "concurrently": "^6.4.0",
        "css-loader": "^6.5.1",
        "electron": "^22.3.24",
        "electron-builder": "^23.0.3",
        "electron-reload": "^2.0.0-alpha.1",
        "fs-extra": "^10.1.0",
        "html-webpack-plugin": "^5.5.0",
        "lodash": "^4.17.21",
        "node-sass": "^7.0.0",
        "sass": "^1.45.0",
        "sass-loader": "^12.4.0",
        "style-loader": "^3.3.1",
        "webpack": "^5.76.0",
        "webpack-cli": "^4.9.1"
    },
    "build": {
        "appId": "com.sawjang.youfy",
        "productName": "Youfy",
        "files": [
            "./package.json",
            "./App.js",
            "./dist/*",
            "./utils/*",
            "!./node_modules/*",
            "!./src/*"
        ],
        "directories": {
            "output": "packages"
        },
        "copyright": "Copyright Â© 2022 Sawjan G.",
        "linux": {
            "category": "Audio",
            "artifactName": "${name}_${os}_${arch}.${ext}",
            "executableName": "youfy",
            "icon": "./build/icon.icns",
            "target": [
                {
                    "target": "deb",
                    "arch": [
                        "x64"
                    ]
                }
            ]
        },
        "asar": true,
        "afterAllArtifactBuild": "./build/moveExecutable.js",
        "publish": [
            {
                "provider": "github",
                "owner": "saw-jan",
                "repo": "youfy"
            }
        ]
    }
}
