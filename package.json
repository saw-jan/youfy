{
    "name": "youfy",
    "version": "1.0.3",
    "description": "Minimal youtube audio player",
    "main": "App.js",
    "author": "Sawjan G. <saw.jan.grg3e@gmail.com> (https://sajang.com.np)",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/saw-jan/youfy.git"
    },
    "bugs": {
        "url": "https://github.com/saw-jan/youfy/issues"
    },
    "scripts": {
        "build": "webpack -c webpack.config.js",
        "build:w": "webpack -c webpack.config.js --watch",
        "start": "npm run build && electron .",
        "start:dev": "concurrently \"npm:build:w\" \"MODE=dev electron .\"",
        "package": "electron-builder build -p never",
        "postinstall": "electron-builder install-app-deps"
    },
    "devDependencies": {
        "@babel/core": "7.28.0",
        "@babel/preset-env": "7.28.0",
        "babel-loader": "10.0.0",
        "concurrently": "9.2.0",
        "css-loader": "7.1.2",
        "electron": "37.3.1",
        "electron-builder": "26.0.12",
        "electron-reload": "2.0.0-alpha.1",
        "fs-extra": "11.3.0",
        "html-webpack-plugin": "5.6.3",
        "lodash": "4.17.21",
        "node-sass": "9.0.0",
        "sass": "1.89.2",
        "sass-loader": "16.0.5",
        "style-loader": "4.0.0",
        "webpack": "5.99.9",
        "webpack-cli": "6.0.1"
    },
    "build": {
        "appId": "com.sawjang.youfy",
        "productName": "Youfy",
        "files": [
            "./package.json",
            "./App.js",
            "./dist/*",
            "./utils/*",
            "!./node_modules/*",
            "!./src/*"
        ],
        "directories": {
            "output": "packages"
        },
        "copyright": "Copyright Â© 2022 Sawjan G.",
        "linux": {
            "category": "Audio",
            "artifactName": "${name}_${os}_${arch}.${ext}",
            "executableName": "youfy",
            "icon": "./build/icon.icns",
            "target": [
                {
                    "target": "deb",
                    "arch": [
                        "x64"
                    ]
                }
            ]
        },
        "asar": true,
        "afterAllArtifactBuild": "./build/moveExecutable.js",
        "publish": [
            {
                "provider": "github",
                "owner": "saw-jan",
                "repo": "youfy"
            }
        ]
    }
}
